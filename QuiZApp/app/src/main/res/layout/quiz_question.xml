<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Question Text -->
    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="What is the capital of France?"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <!-- Options RadioGroup -->
    <RadioGroup
        android:id="@+id/options_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_text_view"
        android:layout_margin="16dp">

        <!-- Option 1 -->
        <RadioButton
            android:id="@+id/option1_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option A"/>

        <!-- Option 2 -->
        <RadioButton
            android:id="@+id/option2_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option B"/>

        <!-- Option 3 -->

        <!-- Option 4 -->
        <RadioButton
            android:id="@+id/option3_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option C" />

        <RadioButton
            android:id="@+id/option4_radio_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option D"/>
    </RadioGroup>

    <!-- Next Button -->
    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/options_radio_group"
        android:layout_alignEnd="@+id/options_radio_group"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="142dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="343dp"
        android:text="Next" />

</RelativeLayout>
