<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background rectangle -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background color -->
            <corners android:radius="4dp" /> <!-- Rounded corners, adjust radius as needed -->
        </shape>
    </item>
    <!-- Grey border with shadow -->
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- White background to create a shadow effect -->
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#CCCCCC" /> <!-- Grey border color -->
            <padding android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp" />
        </shape>
    </item>
</layer-list>
